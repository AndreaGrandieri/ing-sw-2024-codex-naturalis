<?xml version="1.0" encoding="UTF-8"?>

<?import it.polimi.ingsw.gui.components.panes.board.BoardPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<VBox fx:id="main" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gui.tests.boardTest.TestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Pane>

        <Rectangle fx:id="rect1" height="100" width="100"/>
    </Pane>

    <Label fx:id="welcomeText"/>
    <Button onAction="#onHelloButtonClick" text="Hello!"/>

    <GridPane VBox.vgrow="ALWAYS">

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="80"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <StackPane
                GridPane.columnIndex="1" GridPane.rowIndex="0"
        >
            <!--                    style="-fx-background-color:red"-->
            <BoardPane
                    style="-fx-border-width:3;-fx-border-color:black"
                    fx:id="custom"
            />
            <Rectangle viewOrder="-2" fx:id="overPane" style="fx-background-color:blue" opacity="0.1"/>

        </StackPane>

    </GridPane>


    <!--    <ImageView fitHeight="200" preserveRatio="true">-->
    <!--        <Image url="@Board2.png"/>-->
    <!--    </ImageView>-->
</VBox>
