                            <!--                    <RowConstraints percentHeight="33" vgrow="ALWAYS"/>-->
                        </rowConstraints>
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <!--                <OtherPlayerPane id="1" fx:id="pp1"
                        style="-fx-border-width: 4; -fx-border-radius: 10 10 0 0;"-->
                        <!--                                 VBox.vgrow="ALWAYS"/>-->
