                        <!--                                 VBox.vgrow="ALWAYS"/>-->
                        <!--                <OtherPlayerPane id="3" fx:id="pp3"
                         style="-fx-border-radius: 0 0 10 10;"
                         GridPane.rowIndex="2"-->
                        <!--                                 GridPane.vgrow="ALWAYS" VBox.vgrow="ALWAYS"/>-->

                    </GridPane>
                </Tab>
                <Tab fx:id="chatTab" text="Chat">
                    <!--                    <ChatView style="-fx-font-size:14px; -fx-border-radius:5 5 0 0" styleClass="dark-border"/>-->
                </Tab>
                <Tab text="Other">
                    <VBox style="-fx-font-size:14px; -fx-border-radius:5 5 0 0" styleClass="group-container">
                        <VBox VBox.vgrow="ALWAYS"/>
                        <Label styleClass="group-button" text="Quit" onMouseClicked="#goBack" maxWidth="Infinity"/>
                    </VBox>
                </Tab>

            </TabPane>


            <GoalsPane GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.rowSpan="2" fx:id="goalsPane"
                       alignment="BOTTOM_LEFT" prefWidth="405.0" HBox.hgrow="ALWAYS"/>

            <MainHandPane fx:id="mainHandPane" alignment="TOP_RIGHT" translateY="-4.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="1" GridPane.rowSpan="2" VBox.vgrow="ALWAYS"/>

            <DeckPane GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.rowSpan="2"
                      fx:id="deckPane" HBox.hgrow="ALWAYS"/>

        </GridPane>
    </StackPane>
