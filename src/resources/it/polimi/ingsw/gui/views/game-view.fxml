                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="27.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints percentHeight="3" vgrow="NEVER"/>
                <RowConstraints percentHeight="25.0" vgrow="ALWAYS"/>
                <RowConstraints percentHeight="3" vgrow="NEVER"/>
                <RowConstraints/>
            </rowConstraints>

            <MainManuscriptPane fx:id="mainPlayerPane" styleClass="main-manuscript" viewOrder="-5"
                                GridPane.columnSpan="2" GridPane.valignment="BOTTOM" GridPane.vgrow="ALWAYS"
                                HBox.hgrow="NEVER"/>

            <TabPane fx:id="tabPane" GridPane.columnIndex="2" GridPane.vgrow="ALWAYS"
                     side="BOTTOM" tabClosingPolicy="UNAVAILABLE"
            >
                <Tab fx:id="tab" text="Players">
                    <GridPane fx:id="otherPlayersGrid">
                        <rowConstraints>
                            <!--                    <RowConstraints percentHeight="33" vgrow="ALWAYS"/>-->
