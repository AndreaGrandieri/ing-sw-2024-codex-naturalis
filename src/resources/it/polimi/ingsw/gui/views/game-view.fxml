<fx:root fx:id="mainBox" alignment="BOTTOM_CENTER" prefHeight="764.0" prefWidth="1302.0" styleClass="background"
         stylesheets="@../game-view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="it.polimi.ingsw.gui.views.GameView" type="VBox">
    <StackPane VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="30.0" right="30.0" top="30.0"/>
        </VBox.margin>

        <Pane fx:id="hoverPane" mouseTransparent="true" viewOrder="-1"/>


        <GridPane hgap="20.0" styleClass="container" StackPane.alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
